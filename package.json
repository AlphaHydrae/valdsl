{
  "name": "valdsl",
  "version": "0.4.4",
  "description": "Extensible validation DSL",
  "keywords": [
    "dsl",
    "messageformat",
    "valid",
    "validate",
    "validation"
  ],
  "license": "MIT",
  "author": {
    "name": "Simon Oulevay (Alpha Hydrae)",
    "email": "npm@alphahydrae.com"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/AlphaHydrae/valdsl.git"
  },
  "homepage": "https://github.com/AlphaHydrae/valdsl",
  "bugs": "https://github.com/AlphaHydrae/valdsl/issues",
  "main": "./lib",
  "files": [
    "lib"
  ],
  "scripts": {
    "build": "rimraf lib && npm run src:build",
    "docs": "rimraf docs && npm run docs:gen",
    "docs:gen": "esdoc && rimraf docs/ast",
    "docs:publish": "npm run docs && gh-pages -d docs",
    "docs:serve": "node serve-docs.js",
    "docs:watch": "onchange README.md \"src/**/*.js\" -- npm run docs:gen",
    "prepublish": "npm run build",
    "src:build": "npm run src:lint && npm run src:compile",
    "src:compile": "babel src -d lib",
    "src:lint": "jshint spec src",
    "src:watch": "onchange \"spec/**/*.js\" \"src/**/*.js\" -- npm run test:src",
    "start": "npm run build && npm run src:watch",
    "start:all": "concurrently \"npm run build\" \"npm run docs\" && npm run watch",
    "test": "mocha --compilers js:babel-core/register --recursive spec",
    "test:src": "npm run build && npm test",
    "watch": "concurrently \"npm run src:watch\" \"npm run docs:serve\" \"npm run docs:watch\""
  },
  "dependencies": {
    "bluebird": "^3.4.6",
    "es6-error": "^4.0.0",
    "json-pointer": "^0.6.0",
    "lodash": "^4.16.2",
    "messageformat": "^1.0.2",
    "valib": "^2.0.0"
  },
  "devDependencies": {
    "babel-cli": "^6.23.0",
    "babel-core": "^6.23.1",
    "babel-plugin-add-module-exports": "^0.2.1",
    "babel-preset-es2015": "^6.16.0",
    "chai": "^4.0.2",
    "concurrently": "^3.4.0",
    "esdoc": "^0.5.2",
    "gh-pages": "^1.0.0",
    "jshint": "^2.9.3",
    "mocha": "^3.1.0",
    "onchange": "^3.2.1",
    "rimraf": "^2.6.1",
    "run-sequence": "^1.2.2",
    "sinon": "^2.3.5",
    "through2": "^2.0.1"
  },
  "engines": {
    "node": ">= 4.0.0"
  }
}
